{
    "name": "QuickSharp",
    "title": "QuickSharp",
    "version": "0.1.0",
    "authors": ["supermomonga"],
    "description": "Easy way to execute your C# script via dotnet subcommand.",
    "packOptions": {
        "summary": "Easy way to execute your C# script via dotnet subcommand."
    },
    "copyright": "supermomonga 2016~",
    "buildOptions": {
        "emitEntryPoint": true,
        "compile": {
            "exclude": [
                "samples"
            ]
        },
        "outputName": "dotnet-quicksharp"
    },
    "dependencies": {
        "Microsoft.CodeAnalysis.CSharp.Scripting": "2.0.0-beta3",
        "Microsoft.NETCore.App": {
            "type": "platform",
            "version": "1.0.1"
        },
        "System.CommandLine": "0.1.0-e160924-1"
    },
    "frameworks": {
        "netcoreapp1.0": {
            "imports": "dnxcore50"
        }
    }
}
